{
  "name": "graphql-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "docker:up": "yarn docker:down && docker-compose up -d",
    "docker:down": "docker-compose down",
    "predevelop": "yarn run types",
    "develop": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "yarn copy ./src/api/{**/**/*,**/*}.graphql ./dist/api",
    "start": "cd dist && node .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.6",
    "@types/cookie-parser": "^1.4.2",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^8.2.3",
    "graphql-yoga": "^1.18.3",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.180",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.10",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "ts-node": "10.4.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "4.5.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
